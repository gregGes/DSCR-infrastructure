<!--This file help to set up the connection to the CloudBroker API. Edit this file by adding 
information on the software you want to launch on CloudBroker, and on the clouds you want to
launch them on-->
<cloudbroker>
    <clouds>
        <cloud>
            <name>CloudSigma</name>
            <provider>CloudSigma CloudSigma CloudSME</provider>
            <region>Zrh</region>
            <flavours>
                <flavour>
                    <size>Small</size>
                    <id>CloudSigma CloudSigma CloudSME Small x64</id>
                </flavour>
            </flavours>
        </cloud>
    </clouds>
    <applications>
        <application>
            <name>[Application Name]</name>
            <sname>[Software Name] [Version]</sname>
            <executable>[Software Name] [Version] [executable file]</executable>
            <param_template>%s</param_template>
        </application>
    </applications>
</cloudbroker>
